<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer_main"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/main_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_drawer_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_menu" />

            <android.widget.Button
                android:id="@+id/goto_login"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/login_button"
                android:text="로그인" />

            <TextView
                android:id="@+id/main_user_nickname"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="닉네임 님"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:visibility="gone"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="내 주변 빈자리"
                android:textColor="@color/black"
                android:textSize="21dp" />


            <LinearLayout
                android:id="@+id/goto_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/location_pin" />

                <TextView
                    android:id="@+id/main_user_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="위치 확인"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

            </LinearLayout>

        </RelativeLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cafe_list"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            tools:listitem="@layout/main_cafe_list_item"
            tools:itemCount="5"/>

        <TextView
            android:id="@+id/main_show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기 >>"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2dp"
            android:textSize="15dp"/>


        <Button
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="logout"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_clear_location"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="위치 정보 제거"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_refresh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="R"
            android:layout_gravity="right"
            android:layout_marginRight="20dp" />


        <Button
            android:id="@+id/temp_payment"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="payment"
            android:layout_gravity="center" />

    </LinearLayout>

    <include
        layout="@layout/drawer" />




</androidx.drawerlayout.widget.DrawerLayout>