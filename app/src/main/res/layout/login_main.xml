<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/login_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/go_back_login"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_arrow"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:gravity="center"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:id="@+id/login_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/login_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/login_id_edittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" sample@gmail.com"
            android:layout_marginRight="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_pw_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/login_pw_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PW "
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginLeft="60dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/login_pw_edittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:hint=" 비번 입력" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="로그인"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/login_button"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with.."
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="70dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/login_kakao"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/login_google"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/login_naver"
            android:layout_weight="1" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trouble with login?"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="60dp">

        <TextView
            android:id="@+id/join_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID 찾기"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_weight="1"
            android:gravity="center"/>


    </LinearLayout>



</LinearLayout>