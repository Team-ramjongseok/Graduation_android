<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp">



    <ImageView
        android:id="@+id/img_item"
        android:layout_width="110dp"
        android:layout_height="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/cafe_sample"
        android:scaleType="centerCrop"
        android:background="@drawable/cafe_img_frame"/>


    <TextView
        android:id="@+id/cafe_name_item"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="카페 이름"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/img_item"
        app:layout_constraintTop_toBottomOf="@id/img_item" />

    <TextView
        android:id="@+id/cafe_empty_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빈자리 5"
        android:textColor="@color/black"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="@id/img_item"
        app:layout_constraintBottom_toBottomOf="@id/cafe_name_item" />


</androidx.constraintlayout.widget.ConstraintLayout>