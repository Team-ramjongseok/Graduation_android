<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cafe_details_images"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/teal_200">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="사진들 들어갈 공간"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/teal_200"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cafe_details_cafename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="카페 1번"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="33dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/cafe_details_seat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="빈자리 5"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginRight="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/call"/>

        <TextView
            android:id="@+id/cafe_details_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="010-1111-2222"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/location_pin"/>

        <TextView
            android:id="@+id/cafe_details_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="서울시 광진구"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="15dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/menu_list_view"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        tools:listitem="@layout/menu_list_item"
        android:background="@drawable/login_button"
        />


    <Button
        android:id="@+id/button_goto_payment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:text="주문하기"
        android:textSize="20dp"/>


</LinearLayout>