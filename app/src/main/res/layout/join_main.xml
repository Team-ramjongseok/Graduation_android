<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/go_back_join"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_arrow"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:gravity="center"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:id="@+id/join_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/join_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/join_id_edittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" sample@gmail.com"
            android:layout_marginRight="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_nick_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/join_nick_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nickname "
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/join_nick_edittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_pw_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/join_pw_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PW "
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginLeft="60dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/join_pw_edittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:hint=" 6자리 이상" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/join_phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Phone "
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginLeft="37dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/join_phone_edittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:hint=" 6자리 이상" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/join_main_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 가입하기"
        android:textSize="20dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button"/>

</LinearLayout>